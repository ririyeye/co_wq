{
    // 单一配置：本地使用 gdb 调试 xmake 构建生成的 test 可执行文件
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug test",
            "type": "cppdbg",
            "request": "launch",
            // 如果改成 debug 模式，请把 release 改成 debug
            "program": "${workspaceFolder}/build/linux/x86_64/release/test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            // 如需自定义 gdb 路径，可改成绝对路径，例如 /usr/bin/gdb
            "miDebuggerPath": "gdb",
            // 需要先手动执行一次 xmake 保证生成目标；如需自动构建，可加上 "preLaunchTask": "xmake-build"
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}